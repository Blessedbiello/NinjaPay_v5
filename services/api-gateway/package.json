{
  "name": "@ninjapay/api-gateway",
  "version": "1.0.0",
  "description": "NinjaPay API Gateway - Express.js REST API",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "api",
    "gateway",
    "express"
  ],
  "author": "NinjaPay Team",
  "license": "MIT",
  "dependencies": {
    "@ninjapay/database": "workspace:*",
    "@ninjapay/logger": "workspace:*",
    "@ninjapay/solana-utils": "workspace:*",
    "@ninjapay/types": "workspace:*",
    "@prisma/client": "^5.22.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^3.3.11",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^4.0.5",
    "supertest": "^7.1.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.5"
  }
