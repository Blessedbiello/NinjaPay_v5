# Database
DATABASE_URL="postgresql://user:password@localhost:5432/ninjapay?schema=public"
MONGODB_URI="mongodb://localhost:27017/ninjapay"
REDIS_URL="redis://localhost:6379"

# Solana
SOLANA_RPC_URL="https://api.devnet.solana.com"
SOLANA_WS_URL="wss://api.devnet.solana.com"
SOLANA_COMMITMENT="confirmed"

# Arcium (requires early access)
ARCIUM_API_KEY="your-arcium-api-key"
ARCIUM_NETWORK="devnet"
ARCIUM_MXE_ENDPOINT="https://mxe-devnet.arcium.com"

# MagicBlock
MAGICBLOCK_ENDPOINT="https://api.magicblock.dev"
MAGICBLOCK_ENABLED="true"

# API Configuration
API_PORT="3000"
JWT_SECRET="your-secret-key-change-in-production"
JWT_EXPIRES_IN="7d"
CORS_ORIGIN="http://localhost:3001,http://localhost:19006"

# Rate Limiting
RATE_LIMIT_WINDOW="60000"
RATE_LIMIT_MAX_REQUESTS="60"

# Logging
LOG_LEVEL="info"
NODE_ENV="development"

# External Services
SENTRY_DSN=""
MIXPANEL_TOKEN=""

# Payment Processing
MAX_BATCH_SIZE="1000"
DEFAULT_TRANSFER_PRIORITY="speed"

# AI Agents (will be configured later)
AI_ORCHESTRATOR_URL="http://localhost:8000"
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""

# Admin Portal
ADMIN_API_KEY=dev_admin_key_12345
NEXT_PUBLIC_ADMIN_API_KEY=${ADMIN_API_KEY}
NEXT_PUBLIC_ADMIN_API_URL=http://localhost:3000/v1/admin
